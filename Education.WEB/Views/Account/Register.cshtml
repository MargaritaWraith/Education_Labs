@model Education.WEB.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Регистрация</h1>

<form asp-action="Register" asp-controller="Account" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-6">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="col-6">
            <label asp-for="Surname"></label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-6">
            <label asp-for="Patronymic"></label>
            <input asp-for="Patronymic" class="form-control" />
            <span asp-validation-for="Patronymic" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="col-6">
            <label asp-for="PasswordConfirm"></label>
            <input asp-for="PasswordConfirm" class="form-control" />
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>
    </div>

    <hr class="mb-4" />
    <button type="submit" class="btn btn-primary btn-lg btn-block">Отправить</button>

</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
