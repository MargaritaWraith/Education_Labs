
@model IEnumerable<Education.Entityes.EF.StudentGroup>
@{
    ViewData["Title"] = "Index";
}

<h1>Группы</h1>

<a asp-controller="Students" asp-action="EditGroup" class="btn btn-dark">Создать новую группу</a>

<table class="table">
    <thead>
    <tr>
        <th>№</th>
        <th>Номер группы</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @{
        int n = 1;
    }
    @foreach (var group in Model)
    {
        <tr>
            <td>@(n++)</td>
            <td><a asp-controller="Students" asp-action="GroupStudents" asp-route-Id="@group.Id">@group.Name</a></td>
            <td><a asp-controller="Students" asp-action="EditGroup" asp-route-Id="@group.Id">Редактировать</a></td>
        </tr>
    }
    </tbody>
</table>