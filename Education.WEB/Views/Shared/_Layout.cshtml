<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Education.WEB</title>

    <partial name="Partial/_Styles" />

    @RenderSection("Styles", required: false)
</head>
<body>
    @if (IsSectionDefined("Header"))
    {
        <header>
            @RenderSection("Header")
        </header>
    }
    else
    {
        <partial name="Partial/_Header" />
    }

    @RenderSection("ContentHeader", false)

    <div class="container">
        @*<partial name="Partial/_CookieConsentPartial" />*@
        @if (IsSectionDefined("Aside"))
        {
            <div class="row">
                <div class="col-sm-9">
                    <main role="main" class="pb-3">
                        <div class="container">
                            @RenderBody()
                        </div>
                    </main>
                </div>
                <div class="col-sm-3 order-sm-first">
                    <aside>
                        <div class="container">
                            @RenderSection("Aside")
                        </div>
                    </aside>
                </div>
            </div>
        }
        else
        {
            <main role="main" class="pb-3">
                <div class="container">
                    @RenderBody()
                </div>
            </main>
        }
    </div>

    @RenderSection("ContentFooter", false)

    @if (IsSectionDefined("Footer"))
    {
        <footer>
            @RenderSection("Footer")
        </footer>
    }
    else
    {
        <partial name="Partial/_Footer" />
    }

    <partial name="Partial/_Scripts" />

    @RenderSection("Scripts", required: false)
</body>
</html>
